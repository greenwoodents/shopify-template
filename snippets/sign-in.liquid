<div id="sign-in-popup">
    <div class="box">
        <div class="top">
            <h2>Sign In</h2>
            <span id="close-sign-in"></span>

            {% form 'customer_login' %}
                {% if form.errors %}
                    <div class="error">
                        {{ form.errors | default_errors }}
                    </div>
                {% endif %}

                <div class="label">
                    <label for="CustomerEmail">{{ 'customer.login.email' | t }}</label>
                    <input type="email" required name="customer[email]" id="CustomerEmail" class="input" autocorrect="off" autocapitalize="off" autofocus>
                </div>

                <div class="label">
                    <label for="CustomerPassword">{{ 'customer.login.password' | t }}</label>
                    <input type="password" required value="" name="customer[password]" id="CustomerPassword" class="input">
                </div>

                <input type="submit" class="btn" value="{{ 'customer.login.sign_in' | t }}">

                <input type="hidden" name="return_to" value="back" />
            {% endform %}

            <h3 id="toggle-reset-passw">{{ 'customer.recover_password.title' | t }}</h3>
        </div>

        <div id="reset-passw-form">
            {% form 'recover_customer_password' %}
                <div class="bottom">
                    {% if form.errors %}
                        <div class="error">
                            {{ form.errors | default_errors }}
                        </div>
                    {% endif %}

                    <div class="label">
                        <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
                        <input type="email" value="" name="email" id="RecoverEmail" class="input" autocorrect="off" autocapitalize="off">
                    </div>

                    <input type="submit" class="btn" value="Send me new password">
                </div>
            {% endform %}
        </div>
    </div>
</div>